<!-- Categories -->
<% 
  # This is what happens when a perl programmer finally learns ruby
  cs = @survey.category_scores 
  cs_colors = %w(CCCCBB 994433 553388 998833 449955 0C0C33 DD6633)
  cs_legend = ( (Category.all.sort { |x,y| x.id <=> y.id } ).collect { |x| x.title } )

%>

<div class="chart">
  <img class="chart" src="http://chart.apis.google.com/chart?chs=500x150&chxt=y&chf=bg,s,333333&chco=<%= cs_colors.join("|") %>&cht=bhs&chbh=a&chd=t:<%= cs.compact.join(",") %>&chdl=<%=h cs_legend.join("|") %>" /> 
</div>

<p>
  <strong>Category Breakdown</strong>
</p>
